---
interface Props {
  title: string;
  description: string;
  image: string;
  demo: string;
}
const { title, description, image, demo } = Astro.props;
---

<a
  class="bg-image parent-container scroll-mt-48 hover:scale-[105%] transition-all duration-300 ease-in relative border border-white/80 bg-cover bg-center h-[300px] cursor-pointer"
  href={`/${image}`}
  id={image}
  style={{
    backgroundImage: `url(/${image}.jpg)`,
  }}
  transition:name={`image-${image}`}
>
  <div class="container absolute bottom-0 px-5 my-6 ">

    <h3 class="text-5xl font-bold text-black/70">{title}</h3>

    <p
      class="paragraph text-black/70 row-span-1 opacity-0 md:text-base xxs:text-[20px] xs:text-[15px] "
    >
      {description.slice(0, 60)} ...
    </p>
  </div>
</a>
