---
interface Props {
  title: string;
  description: string;
  image: string;
}
const { title, description, image } = Astro.props;
---

<a
  class="parent-container hover:scale-[105%] transition-all duration-300 ease-in relative border border-white/80 bg-cover bg-center h-[300px] cursor-pointer"
  href={`/${image}`}
  style={{
    backgroundImage: `url(/${image}.jpg)`,
  }}
>
  <div class="container absolute bottom-0 px-5 my-6">
    <h3 class="text-4xl font-bold">{title}</h3>

    <p
      class="paragraph text-white/60 row-span-1 md:text-base xxs:text-[20px] xs:text-[15px]"
    >
      {description.slice(0, 60)} ...
    </p>
  </div>
</a>
